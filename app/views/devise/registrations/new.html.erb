<main role="main">
  <div class="text-center album py-5">
    <div class="container col-4">
      <%= image_tag("logo.png", :alt => "logo", :class => "mb-5 form-logo") %>
      <p class="lead text-muted"><small>
        원활한 서비스 이용을 위해<br>
        사용가능한 <strong>Email</strong>을 입력해주세요!
      </small></p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
    
      <div class="form-control">
        <%= f.input :email, :input_html => { :class => 'form-control mb-1' }, label: false, placeholder: 'Email', required: true, autofocus: true %>
        <%= f.input :password, :input_html => { :class => 'form-control mb-1' }, label: false, placeholder: 'Password (6 characters minimum)', required: true %>
        <%= f.input :password_confirmation, :input_html => { :class => 'form-control mb-3' }, label: false, placeholder: 'Password_confirmation', required: true %>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "회원가입", :class => 'btn btn-lg btn-success btn-block' %>
      </div>
    </div>
  </div>
</main>
<% end %>



